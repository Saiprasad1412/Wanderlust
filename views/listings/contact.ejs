<% layout("/layouts/boilerplate.ejs") %>

<body>
  <!-- Contact Section -->
  <div class="container py-5">
    <h1 class="display-6 fw-bold text-center mb-3 dark-mode custom-title">Get in Touch</h1>
    <p class="lead text-center mb-5 text-muted">Planning your next adventure or hosting with us? Weâ€™re here to help every step of the way.</p>

    <div class="row g-4 text-center">
      <!-- Card 1: Join WanderLust -->
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm rounded-4 dark-mode-card">
          <div class="card-body py-4 px-3">
            <i class="fa-solid fa-users fa-2x text-primary mb-3"></i>
            <h5 class="card-title fw-semibold">Join WanderLust</h5>
            <p class="card-text">Whether you're a traveler or a host, we're excited to have you onboard. Start exploring or listing today.</p>
          </div>
        </div>
      </div>

      <!-- Card 2: Customer Support -->
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm rounded-4 dark-mode-card">
          <div class="card-body py-4 px-3">
            <i class="fa-solid fa-headset fa-2x text-success mb-3"></i>
            <h5 class="card-title fw-semibold">Customer Support</h5>
            <p class="card-text">Need help with your booking or account? Our support team is ready to assist you 24/7.</p>
            <a href="#" class="btn btn-outline-success rounded-pill mt-2 dark-mode-btn">Contact Support</a>
          </div>
        </div>
      </div>

      <!-- Card 3: Feedback -->
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm rounded-4 dark-mode-card">
          <div class="card-body py-4 px-3">
            <i class="fa-solid fa-comment-dots fa-2x text-warning mb-3"></i>
            <h5 class="card-title fw-semibold">Your Feedback Matters</h5>
            <p class="card-text">Help us enhance your WanderLust experience. Share your ideas and feedback.</p>
            <button class="btn btn-outline-warning rounded-pill mt-2 dark-mode-btn" data-bs-toggle="modal" data-bs-target="#feedbackModal">Give Feedback</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Feedback Modal -->
  <div class="modal fade " id="feedbackModal" tabindex="-1" aria-labelledby="feedbackModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content dark-mode-card">
        <div class="modal-header border-0">
          <h5 class="modal-title fw-bold" id="feedbackModalLabel">
            <i class="fa-solid fa-comment me-2 text-primary"></i> We Value Your Feedback
          </h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form>
            <p class="small text-muted mb-3">Let us know how we can improve your travel or hosting experience.</p>

            <% if (!user) { %>
              <div class="mb-3">
                <label for="name" class="form-label fw-medium">Name</label>
                <input type="text" class="form-control dark-mode-input" id="name" placeholder="Your Name" required>
              </div>
              <div class="mb-3">
                <label for="email" class="form-label fw-medium">Email</label>
                <input type="email" class="form-control dark-mode-input" id="email" placeholder="Your Email" required>
              </div>
            <% } %>

            <div class="mb-3">
              <label for="feedback" class="form-label fw-medium">Feedback</label>
              <textarea class="form-control dark-mode-input" id="feedback" rows="4" placeholder="Share your thoughts..." required></textarea>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary rounded-pill">Submit Feedback</button>
            </div>
          </form>
        </div>
        <div class="modal-footer border-0">
          <button type="button" class="btn btn-outline-secondary rounded-pill" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</body>
