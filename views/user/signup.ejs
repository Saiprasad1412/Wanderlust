<% layout("/layouts/boilerplate.ejs") %>
<div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5 min-vh-100">
            <form  method="POST" action="/signup" class="needs-validation">
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
                    <label for="email">Email address</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="username" name="username" placeholder="abc14" required>
                    <label for="username">Username</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                    <label for="password">Password</label>
                </div>
                <!-- <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
                </div> -->
                <button class="w-100 btn btn-lg btn-primary">Sign up</button>
                <hr class="my-4">
                <div class="my-3">
                    <small class="text-body-secondary">By clicking Login, you agree to the terms of use.</small>
                    <p>Already a user? <a href="/login">Log in here</a></p>
                </div>
            </form>                
    </div>
</div>