<% layout("/layouts/boilerplate.ejs") %>
<div class="container py-5">
  <h2 class="mb-4">Edit Booking</h2>
  <form action="/bookings/<%= booking._id %>?_method=PUT" method="POST">
    <div class="mb-3">
      <label class="form-label">Start Date</label>
      <input type="date" name="startDate" class="form-control" value="<%= booking.startDate.toISOString().split('T')[0] %>" required>
    </div>
    <div class="mb-3">
      <label class="form-label">End Date</label>
      <input type="date" name="endDate" class="form-control" value="<%= booking.endDate.toISOString().split('T')[0] %>" required>
    </div>
    <button class="btn btn-primary">Update Booking</button>
  </form>
</div>
